        padding-top:25px
        padding-bottom:25px
        color: #aaa
      a:hover
        color #fff
        background-color transparent
    .open
      & > a
        color #fff
        background-color transparent
    .dropdown-menu
      background-color #333
      li
        a
          padding 3px 20px
          &:hover
            background transparent

